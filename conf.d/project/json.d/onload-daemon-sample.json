{
    "$schema": "ToBeDone",
    "metadata": {
        "label": "demo-standalone-control",
        "info": "Standalone Controller Config Sample",
        "name": "afb-sample-controller",
        "version": "1.0"
    },
    "plugins": [{
            "label": "plugin-c-sample",
            "info": "Simple demo C Plugin",
            "filename": "plug-capi-sample"
        }, {
            "label": "sample-lua-sample",
            "info": "Extend Lua commands in C",
            "filename": "plug-lua2c-sample"
        }],
    "onload": [{
            "label": "onload-default",
            "info": "onload initialisation config",
            "actions":
                    {
                        "label": "control-init",
                        "lua": {
                            "func": "_Sample_Controller_Init"
                        },
                        "args": {
                            "xxxx": 1234,
                            "yyyy": "Bien le bonjours Ã  vous",
                            "zzzz": "simple-evt"
                        }
                    }
        }],
    "controls":
            [
                {
                    "label": "Button-Happy",
                    "actions": {
                        "label": "Action Happy",
                        "lua": {
                            "load": "filepath",
                            "func": "_Button_Happy"
                        },
                        "args": {
                            "button": 5678
                        }
                    }
                }, {
                    "label": "Button-UnHappy",
                    "actions": {
                        "label": "Action Unhappy",
                        "lua": {
                            "func": "_Button_UnHappy"
                        },
                        "args": {
                            "button": "abcd"
                        }
                    }
                }
            ],
    "events":
            [
                {
                    "label": "Event1",
                    "actions": {
                        "label": "Action Event 1",
                        "lua": {
                            "func": "_Event_Received"
                        },
                        "args": {
                            "evtname": "xxx"
                        }
                    }
                },
                {
                    "label": "Event2",
                    "actions": {
                        "label": "Action Event 2",
                        "lua": {
                            "func": "_Event_Received"
                        },
                        "args": {
                            "evtname": "yyy"
                        }
                    }
                }
            ]
}

